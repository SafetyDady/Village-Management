# Production Environment Configuration for Village Management System
# Copy this file to .env and update with your production values

# ================================
# JWT Authentication Configuration
# ================================

# CRITICAL: Generate a strong, random secret key for production
# Use: python -c "import os; print(os.urandom(32).hex())"
JWT_SECRET_KEY=your-super-secure-random-jwt-secret-key-here-32-bytes-minimum

# Token expiration times (in seconds)
JWT_ACCESS_TOKEN_EXPIRES=3600        # 1 hour
JWT_REFRESH_TOKEN_EXPIRES=2592000    # 30 days

# ================================
# Database Configuration
# ================================

# PostgreSQL Database Connection
DB_HOST=your-production-database-host
DB_PORT=5432
DB_NAME=village_management_prod
DB_USER=your-database-username
DB_PASSWORD=your-secure-database-password

# Database SSL Configuration (recommended for production)
DB_SSL_MODE=require
DB_SSL_CERT_PATH=/path/to/client-cert.pem
DB_SSL_KEY_PATH=/path/to/client-key.pem
DB_SSL_CA_PATH=/path/to/ca-cert.pem

# ================================
# Flask Application Configuration
# ================================

# Flask Environment
FLASK_ENV=production
FLASK_DEBUG=False

# Application Secret Key (different from JWT secret)
FLASK_SECRET_KEY=your-flask-secret-key-for-sessions

# Server Configuration
HOST=0.0.0.0
PORT=8000

# ================================
# CORS Configuration
# ================================

# Allowed Origins (comma-separated)
CORS_ORIGINS=https://your-admin-dashboard.com,https://your-liff-app.com

# ================================
# Security Configuration
# ================================

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Password Policy
MIN_PASSWORD_LENGTH=8
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_NUMBERS=true
REQUIRE_SPECIAL_CHARS=false

# Session Security
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Strict

# ================================
# Logging Configuration
# ================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log File Path
LOG_FILE_PATH=/var/log/village-management/app.log

# Log Rotation
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ================================
# External Services Configuration
# ================================

# LINE Messaging API (for LIFF integration)
LINE_CHANNEL_ACCESS_TOKEN=your-line-channel-access-token
LINE_CHANNEL_SECRET=your-line-channel-secret

# Email Service (for notifications)
SMTP_HOST=your-smtp-server.com
SMTP_PORT=587
SMTP_USERNAME=your-email@domain.com
SMTP_PASSWORD=your-email-password
SMTP_USE_TLS=true

# File Upload Configuration
UPLOAD_FOLDER=/var/uploads/village-management
MAX_CONTENT_LENGTH=16777216  # 16MB

# ================================
# Monitoring & Health Checks
# ================================

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_EXTERNAL_SERVICES=true

# Metrics Collection
METRICS_ENABLED=true
METRICS_ENDPOINT=/metrics

# ================================
# Backup Configuration
# ================================

# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/var/backups/village-management

# ================================
# Performance Configuration
# ================================

# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Caching
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://localhost:6379/0
CACHE_DEFAULT_TIMEOUT=300

# ================================
# Development/Testing Overrides
# ================================
# (Remove these in production)

# Uncomment for development
# FLASK_ENV=development
# FLASK_DEBUG=True
# JWT_ACCESS_TOKEN_EXPIRES=86400  # 24 hours for development
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173

